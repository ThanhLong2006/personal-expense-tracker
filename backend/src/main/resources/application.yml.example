spring:
  datasource:
    url: jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:quanlycanhan}
    username: ${DB_USER:root}
    password: ${DB_PASS:example}
  jpa:
    hibernate:
      ddl-auto: validate
  mail:
    host: smtp.gmail.com
    port: 587
    username: ${MAIL_USERNAME:your-email@gmail.com}
    password: ${MAIL_PASSWORD:app-password}

server:
  port: ${SERVER_PORT:8085}

jwt:
  secret: ${JWT_SECRET:change_me}

redis:
  host: ${REDIS_HOST:redis}
  port: ${REDIS_PORT:6379}

otp:
  enabled: ${OTP_ENABLED:true}

backup:
  directory: backups
  schedule:
    cron: 0 0 */6 * * *
